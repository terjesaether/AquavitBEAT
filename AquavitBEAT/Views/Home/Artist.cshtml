@model AquavitBEAT.ViewModels.ArtistDetailsViewModel

@{
    ViewBag.Title = "Artist";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<h1>@Model.Artist.ArtistName (@Model.Artist.Country)</h1>

<div class="row">

    <div class="col-md-6">
        <div class="paper-box">
            @Model.Artist.About
        </div>
    </div>
    <div class="col-md-6 bottom-air-2">
        <div class="paper-box" style="margin-bottom: 20px;">

            <h3>Tracks</h3>

            <ul class="list-no-bullets">
                @foreach (var item in Model.Artist.SongsToArtists)
            {
                <li>@Html.ActionLink(item.Song.Title, "Track", new { id = item.Song.SongId} )</li>
            }
            </ul>
        </div>

        <div class="paper-box">

            <h3>Releases</h3>

            <ul class="list-no-bullets">
                @foreach (var item in Model.Releases)
            {
                    <li>@Html.ActionLink(item.Title, "Release", new { id = item.ReleaseId })</li>
                }
            </ul>
        </div>

    </div>

</div>

<div class="row">
    <div class="col-md-12">
        <div class="paper-box">
            <ul class="list-no-bullets">
               

                @for (int i = 0; i < Model.Artist.ArtistSocialMedias.Count(); i++)
                {
                    if (!string.IsNullOrEmpty(Model.Artist.ArtistSocialMedias[i].Url))
                    {
                        <li><a href="@Model.Artist.ArtistSocialMedias[i].Url"><img class="soc-icon" src="@Model.GetSocialMediaIcons()[i]" alt="" /></a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>

