@model AquavitBEAT.Models.Song

@{
    ViewBag.Title = "DeleteSong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete @Model.GetFullSongName() ?</h2>

<h3>Are you sure you want to delete this song?</h3>
<div>


    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RemixName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RemixName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>


    </dl>

    <div class="row">
        @if(Model.SongToReleases.Count > 0)
        {<h3>It appeares in these releases, so you have to remove it from those first:</h3>
        foreach (var release in Model.SongToReleases)
        {
            <p>@Html.ActionLink(release.Release.Title, "Edit", "Releases", new {id = release.ReleaseId}, null)</p>
        }
        }
    </div>
    
    <hr />
    
    @if (Model.SongToReleases.Count == 0)
    {
              using (Html.BeginForm())
              {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">

                    <input type="submit" value="Delete" class="btn btn-danger" />

                </div>
              }
    }

    
</div>
